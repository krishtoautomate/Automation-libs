{
	"ANDROID":
		{
			"platformName": "Android",
			"appium:automationName": "uiautomator2",
			"autoLaunch": true,
			"noReset": true,
			"fullReset": false,
			"newCommandTimeout": 60,
			"androidInstallTimeout": 150000,
			"autoDismissAlerts": true,
			"appium:appPackage": "com.android.vending",
			"appium:appActivity": "com.android.vending.AssetBrowserActivity"
		},
	"IOS":
		{
			"platformName": "IOS",
			"appium:automationName": "XCUITest",
			"appium:autoLaunch": true,
			"appium:fullReset": false,
			"appium:noReset": false,
			"appium:newCommandTimeout": 120,
			"appium:autoDismissAlerts": false,
			"appium:bundleId": "com.apple.Preferences",
			"appium:wdaStartupRetries": 1,
			"appium:wdaStartupRetryInterval": 2000,
			"appium:language": "en",
			"appium:locale": "CA",
			"automation:user": "Automation"
		},
	"CHROME":
		{
			"browserName": "chrome",
			"browserVersion": "latest",
			"platformName": "LINUX",
			"acceptInsecureCerts": "true",
			"goog:chromeOptions": {
				"args": [
					"--start-maximized",
					"--ignore-certificate-errors",
					"--disable-popup-blocking",
					"--incognito",
					"user-agent=GomezAgent",
					"disable-infobars",
					"--remote-allow-origins=*"],
				"pageLoadStrategy": "normal"
			}
		},
	"FIREFOX":
		{
			"browserName": "firefox",
			"browserVersion": "latest",
			"platformName": "LINUX"
		}
}